		JButton btnNewButton = new JButton("确定");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {

				List<Object> list = new ArrayList<>();
				list.add("modifyPwd");
				ObjectOutputStream oos = SocketUtil.getObjectOutputStream();
				ObjectInputStream ois = SocketUtil.getObjectInputStream();

				user.setPassword(new String(passwordField.getPassword()));
				// System.out.println("这是修改密码的输出的密码-----" + user.getPassword());
				User uu = new User();
				uu.setID(user.getID());
				uu.setUsername(user.getUsername());
				uu.setPassword(user.getPassword());
				uu.setTel(user.getTel());
				uu.setSex(user.getSex());
				uu.setAge(user.getAge());
				uu.setType(user.getType());
				uu.setAddress(user.getAddress());
				uu.setIconUrl(user.getIconUrl());
				list.add(uu);
				try {
					// System.out.println("这是取出来的user的长度-----+" + list.size());
					// oos.writeUnshared(list);
					oos.writeObject(list);
					oos.flush();

					list = (List<Object>) ois.readObject();
				} catch (IOException e1) {
					e1.printStackTrace();
				} catch (ClassNotFoundException e1) {
					e1.printStackTrace();
				}
				boolean bool = Boolean.parseBoolean(list.get(0).toString());
				// System.out.println("修改密码的返回值为：————————————" + bool);
				if (bool) {
					JOptionPane.showMessageDialog(null, "修改成功");
					UserInfo.this.setVisible(false);
				} else {
					JOptionPane.showMessageDialog(null, "修改失败");
					UserInfo.this.setVisible(false);
				}
			}
		});
